// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  GUEST
}

model AuditColumns {
  id                 Int      @id @default(autoincrement())
  base_user          BaseUser @relation(references: [id], fields: [updated_by_user_id])
  updated_by_user_id Int
  updated_on         DateTime
}

model BaseUser {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  firstName    String
  lastName     String
  phone_number String?
  role         Role           @default(USER)
  AuditColumns AuditColumns[]
}

model SubscribeEmailList {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  unsubscribe Boolean  @default(false)
  date_sub    DateTime @default(now())
}

model RequestFeatures {
  id         Int     @id @default(autoincrement())
  app_review String
  email      String?
  rating     String  @default("5")
}

model Items {
  item_id                 Int          @id @default(autoincrement())
  item_name               String
  item_quantity           Int          @default(1)
  item_location           ItemLocation @relation(references: [location_id], fields: [itemLocationLocation_id])
  doesExpire              Boolean
  expiryDate              DateTime?
  itemLocationLocation_id Int
}

model ItemLocation {
  location_id   Int      @id @default(autoincrement())
  location_name String
  location_desc String?
  Items         Items[]
}
